
<div class="ac-wrapper">
  <div class="settings-form">
    <div class="ac-stig">
      <%= form_for @video,:html => { :multipart => true } do |f| %>
        <% if @video.errors.any? %>
          <ul style='position:relative;left:44px;width:400px;'>
            <% @video.errors.each do |attr,msg| %>
              <li style='color:red;list-style-type: disc;'><%= attr %>&nbsp;<%= msg %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="fm-row">
          <div class="row">
            <div class="col4 first"><label class="lbl-fmx">Video Title</label></div><!-- end .col4 section -->	
            <div class="col8 last">
              <div class="row">
                <%= f.text_field :video_title,:class => "input-ui fluid" %>
              </div><!-- end .row section -->	
            </div><!-- end .col8 section -->	
          </div><!-- end .row section -->	
        </div><!-- end .fm-row section -->
        <div class="fm-row">
          <div class="row">
            <div class="col4 first"><label class="lbl-fmx">Upload Video</label></div><!-- end .col4 section -->	
            <div class="col8 last">
              <div class="row">
                <div class="col2 first svn-rgt" style="width:50px;height:50px;">
                  <div></div>
                </div><!-- end col6 section -->
                <div class="col7 last svn-lft">

                  <label for="file" class="file-input" style="top:26px;">
                    <span class="button">
                      <%= f.file_field :video,:id => "file",:onChange => "this.parentNode.nextSibling.value = this.value" %>
                      Upload
                    </span>
                  </label>                                        

                </div><!-- end .col6 section -->
              </div><!-- end .row section -->	
            </div><!-- end .col8 section -->	
          </div><!-- end .row section -->	
        </div><!-- end .fm-row section -->
        <br/>
        <%= f.submit "Upload",:class => "buttonx pos",:style => "position:relative;left:43px;"%>
      <% end %>
      <br/><br/>
    </div>
  </div>
</div>
<script>
  $('#file').change(function() {
    $('#new_video').submit();
  });
</script>
